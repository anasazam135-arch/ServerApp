<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav', { user: null }) %>

  <div class="container" style="max-width: 720px;">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title mb-3">Register</h3>

        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form method="POST" action="/register" class="vstack gap-3">
          <input class="form-control" name="fullName" placeholder="Full name" type="text" required />
          <input class="form-control" name="email" placeholder="Email" type="email" required />
          <input class="form-control" name="password" placeholder="Password (min 6)" type="password" required />
          <div>
            <button class="btn btn-primary" type="submit">Create account</button>
          </div>
        </form>

        <p class="mt-3 mb-0">Already have an account? <a href="/login">Login</a></p>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
